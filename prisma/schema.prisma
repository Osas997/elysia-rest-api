generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  product Product[]

  @@map("categories")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  id_category Int
  created_at  DateTime @default(now())
  category    Category @relation(fields: [id_category], references: [id])

  @@map("products")
}
